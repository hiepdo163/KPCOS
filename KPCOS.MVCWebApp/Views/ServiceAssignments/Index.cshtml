@model KPCOS.Common.PagedResultResponse<KPCOS.Data.Models.ServiceAssignment>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-10">
        <h1 class="display-8">Service Assignments</h1>
    </div>
    <div class="col-md-2 text-end">
        <a asp-action="Create"><div class="btn btn-success">Create New</div></a>
    </div>
</div>
    <form method="get" class="d-flex flex-row my-3 gap-2">
    <div class="col-md-10 d-flex">
        <div class="form-group col-md-4 px-1">
            <label>Service Booking</label>
            @* <select name="ServiceBookingId" class="form-control" asp-items="ViewBag.ServiceBookingId" asp-for="@ViewContext.HttpContext.Request.Query["ServiceBookingId"]"><option value="">None</option></select> *@
            <select name="ServiceBookingId" class="form-control">
                @if (@ViewContext.HttpContext.Request.Query["ServiceBookingId"] == "")
                {
                    <option value="" selected>None</option>
                }else
                {
                    <option value="">None</option>
                }
                @foreach (var item in ViewBag.ServiceBookingId)
                {
                    if (item.Value == @ViewContext.HttpContext.Request.Query["ServiceBookingId"])
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    } else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-md-4 px-1">
            <label>Employee</label>
            @* <select name="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId" value="@ViewContext.HttpContext.Request.Query["EmployeeId"]"><option value="">None</option></select> *@
            <select name="EmployeeId" class="form-control">
                @if (@ViewContext.HttpContext.Request.Query["EmployeeId"] == "")
                {
                    <option value="" selected>None</option>
                }
                else
                {
                    <option value="">None</option>
                }
                @foreach (var item in ViewBag.EmployeeId)
                {
                    if (item.Value == @ViewContext.HttpContext.Request.Query["EmployeeId"])
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-md-4 px-1">
            <label>Status</label>
            <select name="Status" class="form-control">
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "")
                {
                    <option value="" selected>None</option>
                }
                else
                {
                    <option value="">None</option>
                }
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "Done")
                {
                    <option value="Done" selected>Done</option>
                }
                else
                {
                    <option value="Done">Done</option>
                }
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "On-Going")
                {
                    <option value="On-Going" selected>On-Going</option>
                }
                else
                {
                    <option value="On-Going">On-Going</option>
                }
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "Canceled")
                {
                    <option value="Canceled" selected>Canceled</option>
                }
                else
                {
                    <option value="Canceled">Canceled</option>
                }
            </select>
        </div>
        </div>
    <div class="col-md-2 py-4">
        <button type="submit" class="btn btn-outline-primary">Search</button>
        <a asp-action="Index"><div class="btn btn-outline-secondary">Reset</div></a>
        </div>
    </form>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        ServiceBooking
                    </th>
                    <th>
                        Employee
                    </th>
                    <th>
                        Assign Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceBooking.ServiceType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.User.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AssignDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id"><div class="btn btn-secondary">Details</div></a>
                            @if (item.Status == "On-Going")
                            {
                                <span>|</span>
                                <a asp-action="Edit" asp-route-id="@item.Id"><div class="btn btn-warning">Edit</div></a>
                                <span>|</span>
                                <a asp-action="Delete" asp-route-id="@item.Id"><div class="btn btn-danger">Delete</div></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="pagination">
            @{
                var i = 1;
                while (i<= Model.TotalPages)
                {
                    <span class="page-item mx-2">
                        @if (Model.PageNumber == i)
                        {
                            <a class="page-link p-0" asp-action="Index"
                               asp-route-PageNumber="@i">
                                <div class="btn btn-success">@i</div>
                            </a>
                        } else
                        {
                            <a class="page-link p-0" asp-action="Index"
                               asp-route-ServiceBookingId="@ViewContext.HttpContext.Request.Query["ServiceBookingId"]"
                               asp-route-EmployeeId="@ViewContext.HttpContext.Request.Query["EmployeeId"]"
                               asp-route-Status="@ViewContext.HttpContext.Request.Query["Status"]"
                               asp-route-PageNumber="@i">
                                <div class="btn btn-primary">@i</div>
                            </a>
                        }
                    </span>
                    i++;
                }
            }
        </div>
    </div>
</div>


