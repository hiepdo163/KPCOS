@model KPCOS.Data.Models.Invoice

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <h4>Are you sure you want to delete this invoice?</h4>
    <hr />
    <div>
        <h5>Invoice Details</h5>
        <p><strong>Discount Applied:</strong> @Html.DisplayFor(model => model.DiscountApplied)</p>
        <p><strong>Payment Date:</strong> @Html.DisplayFor(model => model.PaymentDate)</p>
        <p><strong>Payment Method:</strong> @Html.DisplayFor(model => model.PaymentMethod)</p>
        <p><strong>Status:</strong> @Html.DisplayFor(model => model.Status)</p>
        <p><strong>Tax Amount:</strong> @Html.DisplayFor(model => model.TaxAmount)</p>
        <p><strong>Total Amount:</strong> @Html.DisplayFor(model => model.TotalAmount)</p>
        <p><strong>Project:</strong> @Html.DisplayFor(model => model.Project.Id)</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this invoice?');" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
