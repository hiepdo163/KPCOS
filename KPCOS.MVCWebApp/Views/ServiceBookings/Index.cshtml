@model KPCOS.Common.PagedResultResponse<KPCOS.Data.Models.ServiceBooking>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-10">
        <h1 class="display-8">Service Bookings</h1>
    </div>
    <div class="col-md-2 text-end">
        <a asp-action="Create"><div class="btn btn-success">Create New</div></a>
    </div>
</div>
    <form method="get" class="d-flex flex-wrap my-3 gap-2">
    <div class="col-md-10 d-flex flex-wrap">
        <div class="form-group col-md-4 px-1">
            <label>Service Type</label>
            <input type="text" name="serviceType" class="form-control" placeholder="Service type ..." value="@ViewContext.HttpContext.Request.Query["ServiceType"]" />
        </div>
        <div class="form-group col-md-4 px-1">
            <label>Customer</label>
            @* <select name="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" value="@ViewContext.HttpContext.Request.Query["CustomerId"]"><option value="">None</option></select> *@
            <select name="CustomerId" class="form-control">
                @if (@ViewContext.HttpContext.Request.Query["CustomerId"] == "")
                {
                    <option value="" selected>None</option>
                }
                else
                {
                    <option value="">None</option>
                }
                @foreach (var item in ViewBag.CustomerId)
                {
                    if (item.Value == @ViewContext.HttpContext.Request.Query["CustomerId"])
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-md-4 px-1">
            <label>Start Date</label>
            <input type="datetime-local" name="startDate" class="form-control" placeholder="Start date ..." value="@ViewContext.HttpContext.Request.Query["StartDate"]" />
        </div>
        <div class="form-group col-md-4 px-1">
            <label>End Date</label>
            <input type="datetime-local" name="endDate" class="form-control" placeholder="End date ..." value="@ViewContext.HttpContext.Request.Query["EndDate"]" />
        </div>
        <div class="form-group col-md-4 px-1">
            <label>Status</label>
            <select name="Status" class="form-control">
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "")
                {
                    <option value="" selected>None</option>
                }
                else
                {
                    <option value="">None</option>
                }
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "Done")
                {
                    <option value="Done" selected>Done</option>
                }
                else
                {
                    <option value="Done">Done</option>
                }
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "On-Going")
                {
                    <option value="On-Going" selected>On-Going</option>
                }
                else
                {
                    <option value="On-Going">On-Going</option>
                }
                @if (@ViewContext.HttpContext.Request.Query["Status"] == "Canceled")
                {
                    <option value="Canceled" selected>Canceled</option>
                }
                else
                {
                    <option value="Canceled">Canceled</option>
                }
            </select>
        </div>
        </div>
    <div class="col-md-2 py-4">
        <button type="submit" class="btn btn-outline-primary">Search</button>
        <a asp-action="Index"><div class="btn btn-outline-secondary">Reset</div></a>
        </div>
    </form>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Service Type
                    </th>
                    <th>
                        Booking Date
                    </th>
                    <th>
                        Schedule Type
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>
                    <th>
                        Note
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ScheduleType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.User.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id"><div class="btn btn-secondary">Details</div></a>
                            @if (item.Status == "On-Going")
                            {
                                <span>|</span>
                                <a asp-action="Edit" asp-route-id="@item.Id"><div class="btn btn-warning">Edit</div></a>
                                <span>|</span>
                                <a asp-action="Delete" asp-route-id="@item.Id"><div class="btn btn-danger">Delete</div></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="pagination">
            @{
                var i = 1;
                while (i <= Model.TotalPages)
                {
                    <span class="page-item mx-2">
                        @if (Model.PageNumber == i)
                        {
                            <button type="button" class="btn btn-success">@i</button>
                        }
                        else
                        {
                            <a class="page-link p-0" asp-action="Index"
                               asp-route-ServiceType="@ViewContext.HttpContext.Request.Query["ServiceType"]"
                               asp-route-CustomerId="@ViewContext.HttpContext.Request.Query["CustomerId"]"
                               asp-route-StartDate="@ViewContext.HttpContext.Request.Query["StartDate"]"
                               asp-route-EndDate="@ViewContext.HttpContext.Request.Query["EndDate"]"
                               asp-route-Status="@ViewContext.HttpContext.Request.Query["Status"]"
                               asp-route-PageNumber="@i">
                                <div class="btn btn-outline-secondary">@i</div>
                            </a>
                        }
                    </span>
                    i++;
                }
            }
        </div>
    </div>
</div>


