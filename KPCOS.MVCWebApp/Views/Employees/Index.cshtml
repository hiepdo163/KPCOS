                    data: JSON.stringify({
                        userId: $('#userId').val(),
                        supervisorId: $('#supervisorId').val(),
                        salary: $('#salary').val()
                    }),
                    success: function (result) {
                        if (result.status >= 1) {
                            $('#employeeModal').modal('hide');
